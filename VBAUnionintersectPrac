Sub Union_namja()
    Dim inta    As Integer
    Dim rangA   As Range
    Dim intb    As Integer
    
    intb = Range("F100").End(xlUp).Row
    
'  합집합으로 남자 묶기
    For inta = 7 To intb
        If Range("G" & inta) = "남" Then
            If rangA Is Nothing Then
                Set rangA = Range("G" & inta)
            Else
                Set rangA = Union(rangA, Range("G" & inta))
            End If
        End If
    Next
    
'   메세지 출력
    If rangA Is Nothing Then
        MsgBox "Nothing"
    Else
        rangA.EntireRow.Interior.ColorIndex = 3
    End If
End Sub
