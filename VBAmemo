Sub toll_day()
    Dim ranA    As Range
    Dim ranB    As Range
    Dim rangA   As Range
    Dim rangB   As Range
    
    
    Set ranB = Range("A7:A25")
    
    For Each ranA In ranB
        If ranA = Range("AC2") Then
            ranA.Resize(1, 27).Copy
            Range("A27").PasteSpecial xlPasteValues
        End If
    Next
    
    Set rangB = Range("D6:AA6")
    
    For Each rangA In rangB
        If rangA = Range("AC3") Then
            Range("A27").Offset(0, rangA.Column).Offset(0, -1).Copy
            Range("AC4").PasteSpecial xlPasteValues
        End If
    Next
    
    For Each rangA In rangB
        If rangA = Range("AC3") Then
            ranA.Offset(0, ranA.Column).Offset(0, -3).Select
        End If
        Exit For
    Next
    
    Set ranB = Range("A31:A49")
    
    For Each ranA In ranB
        If ranA = Range("AC2") Then
            ranA.Resize(1, 27).Copy
            Range("A51").PasteSpecial xlPasteValues
        End If
    Next
    
    Set rangB = Range("D30:AA30")
    
    For Each rangA In rangB
        If rangA = Range("AC3") Then
            Range("A51").Offset(0, rangA.Column).Offset(0, -1).Copy
            Range("AE4").PasteSpecial xlPasteValues
        End If
    Next
    
    
    If Range("AC4") <= Range("AE4") Then
        Range("AE5") = "処理"
    Else
        Range("AE5") = "未処理"
    End If
    
End Sub

